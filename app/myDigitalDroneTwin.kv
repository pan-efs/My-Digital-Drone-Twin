<Filechooser>:

    label: label

    # Providing the orientation
    orientation: 'vertical'

    # Creating the File list / icon view

    BoxLayout:

        # Creating list view one side
        FileChooserListView:
            canvas.before:
                Color:
                    rgb: 0.5, 0.5, 0.5
                Rectangle:
                    pos: self.pos
                    size: self.size
            on_selection: root.select(*args)

# Adding label
    Label:
        id: label
        size_hint_y: .1
        canvas.before:
            Color:
                rgb: .5, .5, .4
            Rectangle:
                pos: self.pos
                size: self.size